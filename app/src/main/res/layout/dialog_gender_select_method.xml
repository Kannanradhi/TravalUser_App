<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdcdcd">

    <RelativeLayout
        android:id="@+id/layout_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/dialog_gender_header_rl"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/app_color">

            <com.mylibrary.widgets.CustomTextView
                android:id="@+id/dialog_gender_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/gender_dialog_header_tv"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:typeface="sans" />
        </RelativeLayout>

        <View
            android:id="@+id/addimg_view1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/dialog_gender_header_rl"
            android:layout_marginTop="5dp"
            android:background="#cdcdcd"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/dialog_gender_radio_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addimg_view1"
            android:background="@color/white">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:id="@+id/dialog_gender_male_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:text="@string/gender_dialog_male_radio_label"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:lrb_checkedColor="@color/app_color"
                    app:lrb_explodeCount="3"
                    app:lrb_outterPadding="15dp"
                    app:lrb_strokeWidth="3dp"
                    app:lrb_unCheckedColor="@color/app_color" />

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:id="@+id/dialog_gender_female_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:text="@string/gender_dialog_female_radio_label"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:lrb_checkedColor="@color/app_color"
                    app:lrb_explodeCount="3"
                    app:lrb_outterPadding="15dp"
                    app:lrb_strokeWidth="3dp"
                    app:lrb_unCheckedColor="@color/app_color" />

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:id="@+id/dialog_gender_no_pref_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:text="@string/gender_dialog_no_pref_radio_label"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:lrb_checkedColor="@color/app_color"
                    app:lrb_explodeCount="3"
                    app:lrb_outterPadding="15dp"
                    app:lrb_strokeWidth="3dp"
                    app:lrb_unCheckedColor="@color/app_color" />

            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dialog_gender_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/dialog_gender_radio_layout"
            android:background="@color/app_color"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.mylibrary.widgets.CustomTextView
                android:id="@+id/dialog_gender_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/gender_dialog_cancel_label"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:typeface="sans" />

            <View
                android:id="@+id/bottom_view"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/dialog_gender_header_rl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#cdcdcd"
                android:visibility="visible" />

            <com.mylibrary.widgets.CustomTextView
                android:id="@+id/dialog_gender_confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/gender_dialog_confirm_label"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:typeface="sans" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>